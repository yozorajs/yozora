{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "parser-gfm",
  "implicitDependencies": [
    "ast",
    "autolink",
    "blockquote",
    "break",
    "core-parser",
    "core-tokenizer",
    "definition",
    "emphasis",
    "fenced-code",
    "heading",
    "html-block",
    "html-inline",
    "image",
    "image-reference",
    "indented-code",
    "inline-code",
    "link",
    "link-reference",
    "list",
    "paragraph",
    "setext-heading",
    "text",
    "thematic-break"
  ],
  "sourceRoot": "packages/parser-gfm/src",
  "projectType": "library",
  "tags": ["parser"],
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/parser-gfm",
        "parallel": false,
        "commands": ["rimraf lib"]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "cwd": "packages/parser-gfm",
        "parallel": false,
        "commands": ["rollup -c ../../rollup.config.mjs"],
        "env": {
          "NODE_ENV": "production",
          "ROLLUP_SHOULD_SOURCEMAP": "true"
        }
      },
      "configurations": {
        "production": {
          "env": {
            "NODE_ENV": "production",
            "ROLLUP_SHOULD_SOURCEMAP": "false"
          }
        }
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/parser-gfm",
        "parallel": false,
        "commands": ["rollup -c ../../rollup.config.mjs -w"],
        "env": {
          "NODE_ENV": "development",
          "ROLLUP_SHOULD_SOURCEMAP": "true"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/parser-gfm",
        "commands": ["vitest run --config ../../vitest.config.ts"]
      },
      "configurations": {
        "coverage": {
          "commands": ["vitest run --config ../../vitest.config.ts --coverage"]
        },
        "update": {
          "commands": ["vitest run --config ../../vitest.config.ts -u"]
        }
      }
    }
  }
}
