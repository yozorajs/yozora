{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "markup-weaver",
  "implicitDependencies": ["ast"],
  "sourceRoot": "packages/markup-weaver/src",
  "projectType": "library",
  "tags": ["other"],
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/markup-weaver",
        "parallel": false,
        "commands": ["rimraf lib"]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "cwd": "packages/markup-weaver",
        "parallel": false,
        "commands": ["rollup -c ../../rollup.config.mjs"],
        "env": {
          "NODE_ENV": "production",
          "ROLLUP_SHOULD_SOURCEMAP": "true"
        }
      },
      "configurations": {
        "production": {
          "env": {
            "NODE_ENV": "production",
            "ROLLUP_SHOULD_SOURCEMAP": "false"
          }
        }
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/markup-weaver",
        "parallel": false,
        "commands": ["rollup -c ../../rollup.config.mjs -w"],
        "env": {
          "NODE_ENV": "development",
          "ROLLUP_SHOULD_SOURCEMAP": "true"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/markup-weaver",
        "commands": ["vitest run --config ../../vitest.config.ts"]
      },
      "configurations": {
        "coverage": {
          "commands": ["vitest run --config ../../vitest.config.ts --coverage"]
        },
        "update": {
          "commands": ["vitest run --config ../../vitest.config.ts -u"]
        }
      }
    }
  }
}
