{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "packages/*/src",
    "packages/*/__test__",
    "tokenizers/*/src",
    "tokenizers/*/__test__",
    "scripts/**/*.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ]
}
