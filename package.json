{
  "name": "@yozora/yozora",
  "version": "0.0.0",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yozorajs/yozora.git"
  },
  "homepage": "https://github.com/yozorajs/yozora/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    ":publish": "yarn test && lerna publish",
    ":publish-recover": "git stash && lerna publish from-package",
    ":upgrade": "yarn upgrade-interactive --latest && run-s clean format build test",
    ":workspace:link": "lerna exec 'yarn link' --concurrency 1",
    ":workspace:unlink": "lerna exec 'yarn unlink' --concurrency 1",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "doc": "run-s doc:**",
    "doc:tokenizer": "node -r ts-node/register -r tsconfig-paths/register scripts/handlebar/tokenizer.ts",
    "doc:parser": "node -r ts-node/register -r tsconfig-paths/register scripts/handlebar/parser.ts",
    "format": "run-s format:lintfix format:prettier",
    "format:prettier": "prettier --write .",
    "format:lintfix": "eslint . --fix",
    "new:tokenizer": "node ./node_modules/@yozora/template-tokenizer/cli.js",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-s postinstall:**",
    "postinstall:main": "is-ci || yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "test": "lerna exec 'echo && pwd && yarn test' --concurrency 1",
    "test:coverage": "lerna exec 'echo && pwd && yarn test --coverage' --concurrency 1",
    "test:parser": "lerna run test --concurrency 4 --scope @yozora/parser-*",
    "test:tokenizer": "lerna run test --concurrency 4 --scope @yozora/parser-*",
    "test:update": "lerna exec 'echo && pwd && yarn test -u' --concurrency 1",
    "update:changelog": "gitmoji-changelog update",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*",
    "scaffolds/*",
    "tokenizers/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/eslint-parser": "^7.17.0",
    "@guanghechen/helper-jest": "^2.1.0",
    "@guanghechen/helper-string": "^2.1.0",
    "@guanghechen/jest-config": "^2.1.0",
    "@guanghechen/rollup-config": "^2.1.0",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "29.1.2",
    "@types/node": "^18.8.4",
    "cross-env": "7.0.3",
    "eslint": "8.25.0",
    "fs-extra": "10.1.0",
    "gitmoji-changelog": "2.3.0",
    "handlebars": "4.7.7",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "jest": "29.1.2",
    "lerna": "5.6.2",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "rollup": "2.79.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4",
    "yarn-deduplicate": "6.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  }
}
