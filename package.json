{
  "name": "@yozora/yozora",
  "version": "0.0.0",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yozorajs/yozora.git"
  },
  "homepage": "https://github.com/yozorajs/yozora/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn test && lerna publish",
    ":upgrade": "yarn upgrade-interactive --latest && run-s clean format build test",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "doc": "run-p doc:**",
    "doc:tokenizer": "node -r ts-node/register -r tsconfig-paths/register scripts/handlebar/tokenizer.ts",
    "doc:parser": "node -r ts-node/register -r tsconfig-paths/register scripts/handlebar/parser.ts",
    "format": "run-s format:lint:fix format:prettier",
    "format:prettier": "prettier --write .",
    "format:lint:fix": "eslint . --fix",
    "new:tokenizer": "node ./node_modules/@yozora/template-tokenizer/cli.js",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "is-ci || yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "test": "lerna run test --concurrency 4",
    "test:coverage": "lerna run test --concurrency 1 -- --coverage",
    "test:parser": "lerna run test --concurrency 4 --scope @yozora/parser-*",
    "test:tokenizer": "lerna run test --concurrency 4 --scope @yozora/parser-*",
    "test:update": "lerna run test:update --concurrency 1",
    "update:changelog": "gitmoji-changelog update",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*",
    "scaffolds/*",
    "tokenizers/*"
  ],
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/eslint-parser": "7.14.7",
    "@guanghechen/jest-config": "1.6.0",
    "@guanghechen/jest-helper": "1.6.0",
    "@guanghechen/option-helper": "1.6.0",
    "@guanghechen/rollup-config": "1.6.0",
    "@types/fs-extra": "9.0.11",
    "@types/jest": "26.0.23",
    "@types/node": "15.12.4",
    "cross-env": "7.0.3",
    "eslint": "7.29.0",
    "fs-extra": "10.0.0",
    "gitmoji-changelog": "2.2.0",
    "handlebars": "4.7.7",
    "husky": "6.0.0",
    "is-ci": "3.0.0",
    "jest": "27.0.5",
    "lerna": "4.0.0",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.6",
    "prettier": "2.3.1",
    "rimraf": "3.0.2",
    "rollup": "2.52.3",
    "ts-jest": "27.0.3",
    "ts-node": "10.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.4",
    "yarn-deduplicate": "3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  }
}
