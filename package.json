{
  "name": "@yozora/yozora",
  "version": "0.0.0",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yozorajs/yozora.git"
  },
  "homepage": "https://github.com/yozorajs/yozora/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    ":publish": "yarn test && lerna publish",
    ":publish-recover": "git stash && lerna publish from-package",
    ":upgrade": "yarn upgrade-interactive && run-s clean format build test",
    ":workspace:link": "lerna exec 'yarn link' --concurrency 1",
    ":workspace:unlink": "lerna exec 'yarn unlink' --concurrency 1",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "doc": "run-s doc:tokenizer doc:parser",
    "doc:tokenizer": "node -r ts-node/register -r tsconfig-paths/register scripts/handlebar/tokenizer.ts",
    "doc:parser": "node -r ts-node/register -r tsconfig-paths/register scripts/handlebar/parser.ts",
    "format": "run-s format:lintfix format:prettier",
    "format:prettier": "prettier --write .",
    "format:lintfix": "eslint . --fix",
    "new:tokenizer": "node ./node_modules/@yozora/template-tokenizer/cli.js",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-s postinstall:dev",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "test": "lerna run test --concurrency 1",
    "test:coverage": "lerna run --concurrency 1 test -- --coverage",
    "test:parser": "lerna run test --concurrency 1 --scope @yozora/parser-*",
    "test:tokenizer": "lerna run test --concurrency 1 --scope @yozora/parser-*",
    "test:update": "lerna run 'test:update' --concurrency 1",
    "version": "yarn && ghc-doc-link-rewrite --username=yozorajs --repository=yozora && git stage -u yarn.lock **/*/package.json **/*/README.md"
  },
  "workspaces": [
    "packages/*",
    "scaffolds/*",
    "tokenizers/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/eslint-parser": "^7.21.8",
    "@guanghechen/conventional-changelog": "^5.0.0",
    "@guanghechen/helper-jest": "^5.0.0",
    "@guanghechen/helper-string": "^5.0.0",
    "@guanghechen/jest-config": "^5.0.0",
    "@guanghechen/rollup-config": "^5.0.0",
    "@guanghechen/script-doc-link": "^5.0.0",
    "@types/jest": "29.5.1",
    "@types/node": "^18.16.8",
    "cross-env": "^7.0.3",
    "eslint": "8.40.0",
    "handlebars": "4.7.7",
    "husky": "8.0.3",
    "import-meta-resolve": "^3.0.0",
    "is-ci": "3.0.1",
    "jest": "^29.5.0",
    "lerna": "6.6.2",
    "lint-staged": "13.2.2",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "2.8.8",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.6",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.3.1"
}
