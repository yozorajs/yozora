{
  "name": "@yozora/yozora",
  "version": "0.0.0",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yozorajs/yozora.git"
  },
  "homepage": "https://github.com/yozorajs/yozora/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 18.12"
  },
  "type": "module",
  "scripts": {
    ":publish": "pnpm clean && pnpm build:production && pnpm test:coverage && changeset publish",
    ":version": "changeset version",
    ":upgrade": "pnpm update -i && pnpm clean && pnpm format && pnpm build && pnpm test",
    "build": "cross-env NODE_ENV=production ROLLUP_SHOULD_SOURCEMAP=true pnpm -r --filter='!@yozora/test-util' run build",
    "build:production": "cross-env NODE_ENV=production ROLLUP_SHOULD_SOURCEMAP=false pnpm -r --filter='!@yozora/test-util' run build",
    "clean": "pnpm -r --filter='!@yozora/test-util' run clean && pnpm install",
    "doc": "pnpm doc:tokenizer && pnpm doc:parser",
    "doc:tokenizer": "tsx scripts/handlebar/tokenizer.ts",
    "doc:parser": "tsx scripts/handlebar/parser.ts",
    "format": "pnpm format:lintfix && pnpm format:prettier",
    "format:prettier": "prettier . --write",
    "format:lintfix": "eslint . --fix",
    "prepublishOnly": "pinst --disable",
    "postinstall": "pnpm postinstall:dev",
    "postinstall:dev": "is-ci || husky",
    "postpublish": "pinst --enable",
    "rebuild": "pnpm clean && pnpm build",
    "test": "pnpm -r run --if-present test",
    "test:coverage": "pnpm -r run --if-present test:coverage",
    "test:parser": "pnpm -r --filter='@yozora/parser*' run test",
    "test:tokenizer": "pnpm -r --filter='@yozora/tokenizer-*' run test",
    "test:other": "pnpm -r --filter='@yozora/ast' --filter='@yozora/ast-util' --filter='@yozora/character' --filter='@yozora/core-parser' --filter='@yozora/core-tokenizer' --filter='@yozora/invariant' --filter='@yozora/markup-weaver' run --if-present test",
    "test:update": "pnpm -r run --if-present test:update",
    "version": "pnpm install && node script/sync-doc-link.mjs && git stage -u pnpm-lock.yaml **/package.json **/*.md"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "9.39.3",
    "@guanghechen/std": "^2.0.2",
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-typescript": "12.3.0",
    "@types/node": "25.3.2",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "10.1.0",
    "eslint": "9.39.3",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import-x": "4.16.1",
    "globals": "17.3.0",
    "handlebars": "4.7.8",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "lint-staged": "16.3.0",
    "pinst": "3.0.0",
    "prettier": "3.8.1",
    "rimraf": "6.1.3",
    "rollup": "4.59.0",
    "rollup-plugin-dts": "6.3.0",
    "tsx": "4.21.0",
    "tslib": "^2.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.15.4"
}
