import createRollupConfig from '@guanghechen/rollup-config'
import manifest from './package.json' assert { type: 'json' }

export default async function () {
  const config = await createRollupConfig({
    manifest,
    pluginOptions: {
      typescriptOptions: {
        tsconfig: 'tsconfig.src.json',
      },
    },
  })
  return config
}
