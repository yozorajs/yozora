{
  "name": "{{{packageName}}}",
  "version": "{{{lowerCase packageVersion}}}",
{{#if packageAuthor}}
  "author": {
    "name": "{{{packageAuthor}}}",
    "url": "https://github.com/{{{packageAuthor}}}/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/{{{packageAuthor}}}/{{{repositoryName}}}.git"{{#if isMonorepo}},
    "directory": "{{{packageLocation}}}"{{/if}}
  },
{{/if}}
  "homepage": "{{{repositoryHomepage}}}",
  "keywords": [],
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 14.15.0"
  },
  "files": [
    "lib/",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map",
    "package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c rollup.config.js",
    "lint:fix": "eslint . --fix",
    "prebuild": "rimraf lib/ && tsc -p tsconfig.src.json --emitDeclarationOnly",
    "prepublishOnly": "cross-env ROLLUP_SHOULD_SOURCEMAP=false yarn build"{{#if isMonorepo}},
    "test": "cross-env TS_NODE_FILES=true jest --config ../../jest.config.js --rootDir .",
    "update:test": "node -r ts-node/register -r tsconfig-paths/register __test__/answer.ts"{{/if}}
  },
  "dependencies": {
    "@yozora/ast": "^{{{toolPackageVersion}}}",
    "@yozora/character": "^{{{toolPackageVersion}}}",
    "@yozora/core-tokenizer": "^{{{toolPackageVersion}}}"
  },
  "devDependencies": {
    "@guanghechen/rollup-config": "^1.7.1",
    "@yozora/core-tokenizer": "^{{{toolPackageVersion}}}",
    "@yozora/eslint-config": "^{{{toolPackageVersion}}}",
    "@yozora/jest-for-tokenizer": "^{{{toolPackageVersion}}}",
    "rimraf": "3.0.2",
    "rollup": "^2.52.7",
    "ts-node": "10.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.5"
  }
}
